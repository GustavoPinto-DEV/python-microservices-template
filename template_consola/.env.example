# Environment
ENVIRONMENT=dev  # dev, qa, prd

# Database Configuration
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432
DB_NAME=your_database

# Consola Configuration
MINUTOS_CONSOLA=60  # Intervalo de ejecución en minutos
ENABLE_CONTINUOUS_MODE=true  # true para ejecución continua, false para una vez
MAX_RETRIES=3  # Número máximo de reintentos en errores

# External Services (ejemplos)
EXTERNAL_API_URL=https://api.external.com
EXTERNAL_API_KEY=your-api-key
EXTERNAL_API_TIMEOUT=30

# SFTP Configuration (si aplica)
SFTP_HOST=sftp.example.com
SFTP_PORT=22
SFTP_USER=your_sftp_user
SFTP_PASSWORD=your_sftp_password
SFTP_INPUT=/input/
SFTP_OUTPUT=/output/

# Logging
LOG_DIR_DEV=logs
LOG_DIR_EXTERNAL=/var/log/app/logs
LOG_LEVEL=INFO

# Batch Processing
BATCH_SIZE=100  # Registros a procesar por lote
ENABLE_PARALLEL_PROCESSING=false

# Docker (si aplica)
LOG_HOST_PATH=/path/to/logs
